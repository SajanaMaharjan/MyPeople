<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.faces</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.faces</welcome-file>
    </welcome-file-list>
 
  <!-- Protected area definition -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Restricted Area - ADMIN Only</web-resource-name>
            <url-pattern>/event.faces</url-pattern>
            <url-pattern>/eventDetails.faces</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>MEMBER</role-name>
        </auth-constraint>
    </security-constraint>
    <!-- Login page -->
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>MyPeopleRealm</realm-name>
        <form-login-config>
            <form-login-page>/aroundMe.faces</form-login-page>
            <form-error-page>/error.xhtml</form-error-page>
        </form-login-config>
       
    </login-config>
    
    <!-- Login filter so that we can handle request and response  -->
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>ejb.filters.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/aroundMe.faces</url-pattern>
    </filter-mapping>
    
    <!-- System roles -->
   
    <security-role>
        <role-name>MEMBER</role-name>
    </security-role>
    
 
</web-app>
